<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ad_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ad_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sponsored" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/up_vote"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button"
            android:scaleType="center"
            android:src="@drawable/ic_upvote_black_24dp"
            android:tint="#999" />
        <ImageView
            android:id="@+id/down_vote"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/up_vote"
            android:layout_toEndOf="@+id/up_vote"
            android:background="@drawable/bg_button"
            android:scaleType="center"
            android:src="@drawable/ic_downvote_black_48dp"
            android:tint="#999" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/down_vote"
            android:layout_toEndOf="@+id/down_vote"
            android:background="@drawable/bg_button"
            android:scaleType="center"
            android:src="@drawable/ic_comment_black_24dp"
            android:tint="#999" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/comment"
            android:layout_toEndOf="@+id/comment"
            android:scaleType="center"
            android:src="@drawable/ic_more_black_24dp"
            android:tint="#999" />
        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_call_to_action" />
    </RelativeLayout>
</LinearLayout>
